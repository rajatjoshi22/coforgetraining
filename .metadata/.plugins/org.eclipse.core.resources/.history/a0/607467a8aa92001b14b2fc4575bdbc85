package com.coforge.langdemos;

public class BonusMain  {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
    BonusCalculator bonus=(int amount)->{
    	System.out.println("bonus for manager");
    	return (amount*2)/3;
    	
    };
    System.out.println(bonus.calculateBonus(20000));
    bonus=(int amount)->{
    	System.out.println("bonus for programmer");
    	return (amount*4)/3;
    	
    };
    System.out.println(bonus.calculateBonus(20000));
    bonus=(int amount)->{
    	System.out.println("bonus for Director");
    	return (amount*5)/3;
    	
    };
    System.out.println(bonus.calculateBonus(20000));
    
    
    		}

}
